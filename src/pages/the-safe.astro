---
import Layout from "~/layouts/Layout.astro";
import {Safe} from "~/components/safe";
import {Paralax} from "~/components/paralax";
import SafeImage from "~/assets/safe.jpeg";
---

<Layout title="The DeadSafe">
    <main>
        <Paralax img={SafeImage.src} className="h-[32rem] group">
            <div class="flex flex-col justify-center items-center gap-4 h-full ">
                <div class=" flex flex-col gap-4 text-4xl bg-dark/40 p-4 group-hover:bg-dark/75 text-center w-full mt-16">
                    <div>Keep your keys safe.</div>
                    <div>Stay alive</div>
                </div>
            </div>
        </Paralax>
        <Safe />
    </main>
</Layout>